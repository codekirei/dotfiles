[init]
	defaultBranch = main
[user]
	name = Jacob Blakely
	email = {{ .git.email | quote }}
[credential]
	; 3 hours
	helper = cache --timeout=10800
[credential "https://github.com"]
	username = codekirei
[diff "lockb"]
	textconv = bun
	binary = true
[pull]
	rebase = true
[push]
	autoSetupRemote = true
[include]
	path = ~/.config/git/local-overrides
[core]
	pager = delta
  excludesFile = ~/.config/git/ignore
[interactive]
	diffFilter = delta --color-only
[delta]
	navigate = true
	side-by-side = true
[merge]
	conflictStyle = zdiff3

; vim: ft=gitconfig
